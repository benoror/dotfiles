! Xft settings
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! URxvt
URxvt.buffered:         true
URxvt.cursorColor:      #afdf87
URxvt.underlineColor:   #ffffff
!URxvt.geometry:         250x78
URxvt.title:            URxvt Terminal
URxvt.cursorBlink: true
URxvt.perl-ext-common: default,matcher
URxvt.urlLauncher: /usr/bin/chromium-browser
URxvt.matcher.button: 1

!scrolling
URxvt.shiva.scrollKey:            true
URxvt.shiva.scrollWithBuffer:     true
URxvt.shiva.scrollBack:           true
URxvt.shiva.scrollTtyOutput:      false

! borderless and no scrollbar
!URxvt*scrollBar: false
URxvt*scrollBar_right: true
URxvt*scrollstyle:plain
URxvt*scrollwidth:20
URxvt*scrollColor:#555555
URxvt*borderLess: false

! -- Fonts -- !
URxvt.font:             xft:Terminus:pixelsize=16:antialias=true
URxvt.boldFont:         xft:Terminus:bold:pixelsize=16:antialias=true
#URxvt.font:xft:envy code r:medium:pixelsize=12
#URxvt.boldFont:xft:envy code r:bold:pixelsize=12
#URxvt.font:xft:dina:medium:pixelsize=12
#URxvt.boldFont:xft:dina:bold:pixelsize=12

! teh transparency stuff
!URxvt.transparent: true
!URxvt*inheritPixmap: true
URxvt*tintColor: #3a3a3a
!URxvt*shading: 50
URxvt*depth: 24
!URxvt*background: rgba:3f00/3f00/3f00/dddd

! -- Colours -- !
#include "/home/benoror/.colours/xoria256"
